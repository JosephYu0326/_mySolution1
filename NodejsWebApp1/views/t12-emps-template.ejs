<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>員工資料</title>
    <link href="stylesheets/greefies/style.css" rel="stylesheet" />    
    <link href="stylesheets/bootstrap-5.0.2/bootstrap.min.css" rel="stylesheet" />
    <script src="javascripts/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container border shadow mt-5 w-50">
        <div class="row">
            <div class="col-sm-12" id="logo">
                <a href="#"><img src="stylesheets/greefies/images/logo.gif" /></a>
            </div>
        </div>

        <div id="main_content" class="row" style="height:550px;">
            <div class="offset-sm-1 col-sm-10">
                <div class="table-responsive" style="height:500px;">
                    <table class="table table-sm caption-top table-striped table-hover table-bordered">
                        <caption class="h4 text-center">員工資料</caption>
                        <thead>
                            <tr><th>編號</th><th>名字</th><th>姓氏</th><th>職稱</th><th>生日</th><th>到職日</th></tr>
                        </thead>
                        <tbody>
                            <%
                            emps.forEach(function(emp){ %>
                            <tr>
                                <td><%= emp.employeeid %></td>
                                <td><%= emp.firstname %></td>
                                <td><%= emp.lastname %></td>
                                <td><%= emp.title %></td>
                                <td><%= emp.birthdate %></td>
                                <td><%= emp.hiredate %></td>
                            </tr>
                            <%
                            });
                            %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="w-100" id="footer">
                <div class="copyright">
                    <a href="#">
                        <img src="stylesheets/greefies/images/footer_logo.gif" />
                    </a>
                </div>
                <div class="footer_links">
                    <a href="#">About us</a>
                    <a href="#">Privacy policy</a>
                    <a href="#">Contact us </a>
                </div>
            </div>
        </div>

    </div>

</body>
</html>
