<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>產品資料</title>
    <link href="stylesheets/greefies/style.css" rel="stylesheet" />    
    <link href="stylesheets/bootstrap-5.0.2/bootstrap.min.css" rel="stylesheet" />
    <script src="javascripts/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="container border shadow mt-5 w-50">
        <div class="row">
            <div class="col-sm-12" id="logo">
                <a href="#"><img src="stylesheets/greefies/images/logo.gif" /></a>
            </div>
        </div>

        <div id="main_content" class="row" style="height:650px;">
            <div class="offset-sm-1 col-sm-10">
                <form method="get" action="/t13-prods-ui" class="form-inline border p-2 justify-content-center">
                    <div class="row g-2 px-5">                        
                        <label class="col-sm-2 col-form-label col-form-label-sm" for="startCatId">起類編</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control form-control-sm" name="startCatId" id="startCatId"
                                   value="<%= startCatId %>" />
                        </div>
                       
                        <label class="col-sm-2 col-form-label col-form-label-sm" for="endCatId">迄類編</label>
                        <div  class="col-sm-3">
                            <input type="text" class="form-control form-control-sm" name="endCatId" id="endCatId"
                                   value="<%= endCatId %>" />
                        </div>
                      
                        <div class="col-sm-2 text-end">
                            <button type="submit" class="btn btn-primary btn-sm">查詢</button>
                        </div>
                    </div>
                </form>
                <div class="table-responsive" style="height:550px;">
                    <table class="table table-sm caption-top table-striped table-hover table-bordere">
                        <caption class="h4">產品資料</caption>
                        <thead>
                            <tr>
                                <th>品號</th>
                                <th>品名</th>
                                <th>類別編號</th>
                                <th>類別名稱</th>
                                <th>單價</th>
                                <th>庫存量</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%
                            prods.forEach(function(prod){ %>
                            <tr>
                                <td><%= prod.productid %></td>
                                <td><%= prod.productname %></td>
                                <td><%= prod.categoryid %></td>
                                <td><%= prod.categoryname %></td>
                                <td><%= prod.unitprice %></td>
                                <td><%= prod.unitsinstock %></td>
                            </tr>
                            <%
                            });
                            %>
                        </tbody>
                    </table>
                </div>
                <nav>
                    <ul class="pagination justify-content-center">
                        <!-- <li class="page-item"><a class="page-link" href="#">1</a></li>-->
                        <%
                        for(let i=1; i<= pageCount; i++){
                        %>
                        <li class="page-item  <%= (activePage==i)?'active':'' %>">
                            <a class="page-link" href="/t13-prods-ui?page=<%= i %>&startCatId=<%= startCatId %>&endCatId=<%= endCatId %>"><%= i %></a>
                            <!--href="/t13-prods-ui?page=1&startCatId=1&endCatId=8"-->
                        </li>
                        <%
                        }
                        %>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="w-100" id="footer">
                <div class="copyright">
                    <a href="#">
                        <img src="stylesheets/greefies/images/footer_logo.gif" />
                    </a>
                </div>
                <div class="footer_links">
                    <a href="#">About us</a>
                    <a href="#">Privacy policy</a>
                    <a href="#">Contact us </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
